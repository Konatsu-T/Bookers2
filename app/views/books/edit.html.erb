<!-- 投稿編集ページ -->
<div class="container">
　　<div class="row">
     <div class="col-md-offset-3 col-md-6">
      <h1>Editing Book</h1>
      <!-- 本の編集エラー -->
      <% if @book.errors.any? %>
        <div>
          <h3 class="error-title"><%= @book.errors.count %> error prohibited this obj from being saved:
          </h3>
          <ul class="error-message">
            <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <% if @book.user_id == current_user.id %>
        <%= form_for(@book) do |f| %>
          <div class="field row">
            <label>Title</label><br>
            <%= f.text_field :title, class:"col-xs-12"%>
          </div>
          <div class="field row">
            <label>Opinion</label><br>
              <%= f.text_area :body, class:"col-xs-12" %>
          </div>
          <div class="btn-wrapper">
            <div class="field row">
              <button class="btn btn-primary col-xs-12" type="submit">Update Book</button>
            </div>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", books_path %>
      </div>
      <% end %>
    </div>
</div>
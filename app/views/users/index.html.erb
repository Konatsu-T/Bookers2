<!-- ユーザ一覧ページ -->

<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <!-- プロフィール部分 -->
    <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @user.id == current_user.id %>
          <div class="row">
            <%= link_to edit_user_path(@user) do %>
            <i class="col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench"></i>
            <% end %>
          </div>
        <% end %>

<!-- 本の投稿フォーム -->
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="field row">
          <label>Title</label><br>
          <%= f.text_field :title, class:"col-xs-12" %>
        </div>
        <div class="field row">
          <label>Opinion</label><br>
          <%= f.text_area :body, class:"col-xs-12" %>
        </div>
          <div class="field row">
          <%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
  </div>

<!-- ユーザ一覧 -->
<div class="col-xs-9">
<h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <th>image</th>
        <th>name</th>
        <th></th>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
   </div>
  </div>
</div>
